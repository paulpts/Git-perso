pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:lts-bullseye'
                    args '''
                        -v $HOME/.npm:/root/.npmm2:z
                        -u root
                        --network biblio
                    '''
                    reuseNode true // Sans Ã§a, il y aura un 2eme workspace
                }
            }

            stages {
                stage('Installation dependances') {
                    steps {
                        dir('bibliotek/bibliotek-angular') {
                            sh 'npm install'
                        }
                    }
                }

                stage('Analyse Sonar') {
                    steps {
                        dir('bibliotek/bibliotek-angular') {
                            withSonarQubeEnv('SonarQube') {
                                sh './node_modules/.bin/sonar-scanner -Dsonar.projectKey=bibliotek-angular'
                            }
                        }
                    }
                }

                stage('Build bibliotek') {
                    steps {
                        dir('bibliotek/bibliotek-angular') {
                            sh './node_modules/.bin/ng build'
                        }
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('bibliotek/bibliotek-angular') {
                    sh 'docker build -t ajc/bibliotek:angular .'
                }
            }
        }

        stage('Docker Deploy') {
            steps {
                dir('bibliotek/dockercompose') {
                    sh 'docker compose up -d --build biblio-angular'
                }
            }
        }
    }
}
